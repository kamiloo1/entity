@model IEnumerable<actividad.Models.Usuario>

@{
 ViewData["Title"] = "Usuarios";
}

<h2>Usuarios</h2>
<p>
 <a class="btn btn-primary" asp-action="Create">Crear nuevo usuario</a>
</p>
<table class="table table-striped">
 <thead>
 <tr>
 <th>Id</th>
 <th>Nombre</th>
 <th>Correo</th>
 <th>Role</th>
 <th>Activo</th>
 <th></th>
 </tr>
 </thead>
 <tbody>
 @foreach(var item in Model) {
 <tr>
 <td>@item.Id</td>
 <td>@item.Nombre</td>
 <td>@item.Correo</td>
 <td>@item.Role?.Nombre</td>
 <td>@(item.Activo == true ? "Sí" : "No")</td>
 <td>
 <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Ver</a>
 <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
 <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
 </td>
 </tr>
 }
 </tbody>
</table>