@model actividad.Models.Usuario

@{
 ViewData["Title"] = "Eliminar Usuario";
}

<h2>Eliminar Usuario</h2>

<div>
 <h4>¿Está seguro que desea eliminar este usuario?</h4>
 <hr />
 <dl class="row">
 <dt class = "col-sm-2">Id</dt>
 <dd class = "col-sm-10">@Model.Id</dd>
 <dt class = "col-sm-2">Nombre</dt>
 <dd class = "col-sm-10">@Model.Nombre</dd>
 <dt class = "col-sm-2">Correo</dt>
 <dd class = "col-sm-10">@Model.Correo</dd>
 <dt class = "col-sm-2">Role</dt>
 <dd class = "col-sm-10">@Model.Role?.Nombre</dd>
 </dl>

 <form asp-action="Delete" method="post">
 <input type="hidden" asp-for="Id" />
 <button type="submit" class="btn btn-danger">Eliminar</button>
 <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
 </form>
</div>