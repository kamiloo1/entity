@model actividad.Models.Huerta

@{
 ViewData["Title"] = "Detalle de Huerta";
}

<h2>Detalle</h2>
<div>
 <h4>Huerta</h4>
 <hr />
 <dl class="row">
 <dt class = "col-sm-2">Id</dt>
 <dd class = "col-sm-10">@Model.Id</dd>
 <dt class = "col-sm-2">Nombre</dt>
 <dd class = "col-sm-10">@Model.Nombre</dd>
 <dt class = "col-sm-2">Ubicacion</dt>
 <dd class = "col-sm-10">@Model.Ubicacion</dd>
 <dt class = "col-sm-2">Responsable</dt>
 <dd class = "col-sm-10">@Model.Responsable?.Nombre</dd>
 <dt class = "col-sm-2">Descripcion</dt>
 <dd class = "col-sm-10">@Model.Descripcion</dd>
 </dl>
</div>
<p>
 <a class="btn btn-secondary" asp-action="Index">Volver</a>
 <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
</p>