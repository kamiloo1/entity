@model IEnumerable<actividad.Models.Huerta>

@{
 ViewData["Title"] = "Huertas";
}

<h2>Huertas</h2>
<p>
 <a class="btn btn-primary" asp-action="Create">Crear nueva huerta</a>
</p>
<table class="table table-striped">
 <thead>
 <tr>
 <th>Id</th>
 <th>Nombre</th>
 <th>Ubicacion</th>
 <th>Responsable</th>
 <th></th>
 </tr>
 </thead>
 <tbody>
 @foreach(var item in Model) {
 <tr>
 <td>@item.Id</td>
 <td>@item.Nombre</td>
 <td>@item.Ubicacion</td>
 <td>@item.Responsable?.Nombre</td>
 <td>
 <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Ver</a>
 <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
 <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
 </td>
 </tr>
 }
 </tbody>
</table>