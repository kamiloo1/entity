@model actividad.Models.Cultivo

@{
 ViewData["Title"] = "Crear Cultivo";
}

<h2>Crear Cultivo</h2>

<form asp-action="Create" method="post">
 <div asp-validation-summary="All" class="text-danger mb-3"></div>
 <div class="form-group">
 <label asp-for="Nombre"></label>
 <input class="form-control" asp-for="Nombre" />
 <span asp-validation-for="Nombre" class="text-danger"></span>
 </div>
 <div class="form-group">
 <label asp-for="Tipo"></label>
 <input class="form-control" asp-for="Tipo" />
 <span asp-validation-for="Tipo" class="text-danger"></span>
 </div>
 <div class="form-group">
 <label asp-for="Area"></label>
 <input class="form-control" asp-for="Area" />
 <span asp-validation-for="Area" class="text-danger"></span>
 </div>
 <div class="form-group">
 <label asp-for="Descripcion"></label>
 <textarea class="form-control" asp-for="Descripcion"></textarea>
 <span asp-validation-for="Descripcion" class="text-danger"></span>
 </div>
 <button type="submit" class="btn btn-primary">Guardar</button>
 <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
 @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}