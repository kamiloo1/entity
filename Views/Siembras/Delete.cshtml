@model actividad.Models.Siembra

@{
 ViewData["Title"] = "Eliminar Siembra";
}

<h2>Eliminar Siembra</h2>

<div>
 <h4>¿Está seguro que desea eliminar esta siembra?</h4>
 <hr />
 <dl class="row">
 <dt class = "col-sm-2">Id</dt>
 <dd class = "col-sm-10">@Model.Id</dd>
 <dt class = "col-sm-2">Cultivo</dt>
 <dd class = "col-sm-10">@Model.Cultivo?.Nombre</dd>
 <dt class = "col-sm-2">Finca</dt>
 <dd class = "col-sm-10">@Model.Finca?.Nombre</dd>
 </dl>

 <form asp-action="Delete" method="post">
 <input type="hidden" asp-for="Id" />
 <button type="submit" class="btn btn-danger">Eliminar</button>
 <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
 </form>
</div>